@model quiz.Models.TBL_STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @if (ViewBag.msg!=null)
            {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.msg
        </div>
            }
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h2>Student Registration</h2>
                

                @using (@Html.BeginForm("sregister","Home",FormMethod.Post,new { entype = "multiple/form-data"}))
                {
                    <div class="form-group">
                        <label for="email">Name:</label>
                        @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        @Html.PasswordFor(x => x.S_PASSWORD, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Image:</label>
                        <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile"/>

                    </div>
                    <input type="submit" value="Register Now !" class="btn btn-success btn-block"/>
                   
                }


            </div>
        </div>
        
    </div>
</body>
</html>
